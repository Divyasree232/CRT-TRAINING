# Definition for a binary tree node.
# class TreeNode:
#     def __init__(self, val=0, left=None, right=None):
#         self.val = val
#         self.left = left
#         self.right = right

class Solution:
    def binaryTreePaths(self, root):
        res = []
        
        def dfs(node, path):
            if not node:
                return
            # Add current node to path
            path += str(node.val)
            
            # If it's a leaf, add path to result
            if not node.left and not node.right:
                res.append(path)
            else:
                # Continue left and right
                dfs(node.left, path + "->")
                dfs(node.right, path + "->")
        
        dfs(root, "")
        return res
