class Solution:
    def convertToTitle(self, columnNumber: int) -> str:
        result = []
        while columnNumber > 0:
            columnNumber -= 1  # shift to 0-based index
            remainder = columnNumber % 26
            result.append(chr(remainder + ord('A')))  # convert to letter
            columnNumber //= 26
        return "".join(reversed(result))
